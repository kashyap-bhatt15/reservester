<h1>Restaurants <%= request.location.city %></h1>
<div class="row-fluid">
  <ul class="thumbnails">
  <% @restaurants.each do |restaurant| %>
    <li class="span3">
      <div class="thumbnail">
        <%= restaurant.image_url ? image_tag(restaurant.image_url(:thumbnail)) : "Booo!" %>
        <div class="caption">
          <h3><%= restaurant.name %></h3>
          <p><%= restaurant.description %> | <%= restaurant.phone %> | <%= restaurant.address %></p>
          <p><%= link_to 'More Details', restaurant, class: 'btn btn-primary'%></p>
          <%# unless restaurant.belong_to?(current_user) %>
          <p><%= link_to 'Make Reservation', new_restaurant_reservation_path(restaurant), class: 'btn btn-primary'%></p>
          <%# end %>
        </div>
      </div>
    </li>
  <% end %>
  </ul>
</div>

<% if current_user %>
<%= link_to 'New Restaurant', new_restaurant_path %>
<% end %>
